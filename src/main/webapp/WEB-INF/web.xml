<?xml version="1.0" encoding="UTF-8"?>
<web-app metadata-complete="false" version="3.0"
 xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
 <filter>
  <filter-name>UTFEncodingFilter</filter-name>
  <filter-class>util.filter.UTFEncodingFilter</filter-class>
 </filter>
 <filter-mapping>
    <filter-name>UTFEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
</filter-mapping>
 <servlet>
  <display-name>WebShop</display-name>
  <servlet-name>WebShop</servlet-name>
  <servlet-class>servlet.MainServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>WebShop</servlet-name>
  <url-pattern>/index/*</url-pattern>
 </servlet-mapping>
</web-app>
